    "author": "",
    "license": "ISC",
    "dependencies": {
        "@socket.io/cluster-adapter": "^0.2.2",
        "express": "^4.18.3",
        "socket.io": "^4.7.4"
    },
    "devDependencies": {
        "@codraw/hive": "^0.0.1",
        "@types/express": "^4.17.21",
        "@typescript-eslint/eslint-plugin": "^7.5.0",
        "@typescript-eslint/parser": "^7.5.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.57.0",
        "tsc-watch": "^6.2.0",
        "typescript": "^5.4.4"
    }
}
